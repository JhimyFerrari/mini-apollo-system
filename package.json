{
  "name": "mini-apollo-system",
  "version": "1.0.0",
  "description": "Projeto antessor para o Apollo System",
  "main": "index.js",
  "scripts": {
    "dev": "trap \"npm run services:down\" INT EXIT && npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "next": "^15.4.6",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
